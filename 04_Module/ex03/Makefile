CC = c++
CFLAGS = -Wall -Wextra -Werror -std=c++98
NAME = no_animal
RM = rm
FILESC = Character.cpp MateriaSource.cpp Materia.cpp main.cpp

OBJS = $(FILESC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJS)

%.o: %.cpp
	c++ $(CFLAGS) -c -o $@ $<

clean:
	$(RM) -f $(OBJS)
	
fclean: clean
	$(RM) -f $(NAME)

re: fclean all

.PHONY: all clean fclean re